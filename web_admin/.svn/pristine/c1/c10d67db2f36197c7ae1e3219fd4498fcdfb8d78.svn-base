@charset "utf-8";

.list_font span:first-child{ display:none;}
.list_font span:last-child{ padding-top:10px; font-size:16px}

.body{
    max-width:640px;
	 min-width:320px;
    margin:auto;
    min-height:100%;
    background-color:#e1e0de;
    position:relative;
}
.index_warp{min-width:320px;}

.list_font li{ width:98%; background:none;}
.list_font li span{ display:none;}

/*模网*/
.home_block{
    margin: 10px;
    overflow: hidden;
    padding: 5px;
    width:160px;
    margin:auto;
    margin-left:20px;
    padding:30px 0 50px 0;
}

.home_block .box{
    color:#666;
    display:block;
    background: rgba(255,255,255,0.8);
    line-height:35px;
    overflow:hidden;
}
.home_block li{
    padding:2px;
    display:inline-block;
    width:76px;
    float:left;
    text-align:center;
    -webkit-box-sizing:border-box;
}
.home_block img{ display:none;}
.home_block .figure{
    height:35px;
	display:block;
}
.home_block  .figure>i:before{
    font-size:25px;
    line-height:45px;
    color:#555;
}
.home_block .describe{
    height:35px;
    line-height:35px;
    display:block;
    overflow:hidden;
    word-spacing:normal;
    word-break:break-all;
}